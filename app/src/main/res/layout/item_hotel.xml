<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp">

    <!--CardView de la primera lista de hoteles-->

    <ImageView
        android:id="@+id/imagenHotel"
        android:layout_width="356dp"
        android:layout_height="199dp"
        android:src="@drawable/hotel1"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nombreHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del hotel">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ubicacionHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calle del hotel"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/botonHotel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icono3"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>